<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:t="clr-namespace:BadEcho.Omnified.Vision.Extensibility.Themes"
                    xmlns:f="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <Color x:Key="{x:Static t:Colors.TextColorKey}">GhostWhite</Color>
    <Color x:Key="{x:Static t:Colors.CriticalTextColorKey}">#FFFF0046</Color>
    <Color x:Key="{x:Static t:Colors.OutlineColorKey}">Black</Color>
    <Color x:Key="{x:Static t:Colors.FadingOutlineColorKey}">#44000000</Color>

    <SolidColorBrush f:Freeze="True" 
                     x:Key="{x:Static t:Brushes.TextForegroundKey}" 
                     Color="{StaticResource {x:Static t:Colors.TextColorKey}}"
    />
    <SolidColorBrush f:Freeze="True" 
                     x:Key="{x:Static t:Brushes.CriticalTextForegroundKey}" 
                     Color="{StaticResource {x:Static t:Colors.CriticalTextColorKey}}"
                     />

    <SolidColorBrush f:Freeze="True"
                     x:Key="{x:Static t:Brushes.OutlinedTextStrokeKey}"
                     Color="{StaticResource {x:Static t:Colors.OutlineColorKey}}"
                     />

    <SolidColorBrush f:Freeze="True"
                     x:Key="{x:Static t:Brushes.FadedOutlinedTextStrokeKey}"
                     Color="{StaticResource {x:Static t:Colors.FadingOutlineColorKey}}"
                     />

</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:badEcho="http://schemas.badecho.com/presentation/2022/02/xaml"
                    xmlns:t="clr-namespace:BadEcho.Vision.Extensibility.Themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="VisionTitleTextStyle" TargetType="{x:Type badEcho:OutlinedTextElement}">
        <Setter Property="Fill" Value="{DynamicResource {x:Static t:Brushes.TextForegroundKey}}"/>
        <Setter Property="InnerStroke" Value="{DynamicResource {x:Static t:Brushes.OutlinedTextStrokeKey}}"/>
        <Setter Property="InnerStrokeThickness" Value="4"/>
        <Setter Property="FontFamily" Value="{DynamicResource {x:Static t:Fonts.VisionTitleFontFamilyKey}}"/>
        <Setter Property="FontSize" Value="28"/>
    </Style>

</ResourceDictionary>
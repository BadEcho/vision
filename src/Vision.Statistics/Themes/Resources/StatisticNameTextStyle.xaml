<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fenestra="http://schemas.badecho.com/fenestra/2021/02/xaml"
                    xmlns:v="clr-namespace:BadEcho.Omnified.Vision.Statistics.Views">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="StatisticTextStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="StatisticNameTextStyle" TargetType="{x:Type fenestra:OutlinedTextElement}" BasedOn="{StaticResource StatisticTextStyle}">
        <Setter Property="Margin" Value="15,15,15,0"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextFormatString" Value="{}{0}:"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding (v:StatisticLayout.IsCompact), RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Value="True">
                <Setter Property="TextFormatString" Value="{x:Null}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>
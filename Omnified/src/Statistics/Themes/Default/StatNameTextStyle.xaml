<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fenestra="http://schemas.badecho.com/fenestra/2020/06/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="StatTextStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="StatNameTextStyle" TargetType="{x:Type fenestra:OutlinedTextElement}" BasedOn="{StaticResource StatTextStyle}">
        <Setter Property="Margin" Value="15,15,0,0"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
</ResourceDictionary>
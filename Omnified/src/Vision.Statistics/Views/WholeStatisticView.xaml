<fenestra:View x:Class="BadEcho.Omnified.Vision.Statistics.Views.WholeStatisticView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
               xmlns:fenestra="http://schemas.badecho.com/fenestra/2021/02/xaml"                   
               xmlns:vm="clr-namespace:BadEcho.Omnified.Vision.Statistics.ViewModels"
               mc:Ignorable="d" 
               d:DesignHeight="250" 
               d:DesignWidth="400"
               >
    <d:DesignProperties.DataContext>
        <vm:WholeStatisticViewModel Name="Total Damage Done:"
                                    Value="29333882"
                                    />
    </d:DesignProperties.DataContext>
    <StackPanel Orientation="Horizontal">
        <fenestra:OutlinedTextElement x:Name="Name"
                                      Style="{StaticResource StatisticNameTextStyle}"
                                      Text="{Binding Name}"
                                      />
        <fenestra:OutlinedTextElement x:Name="Value"
                                      Style="{StaticResource StatisticTextStyle}"
                                      Text="{fenestra:SteppedBinding Value, NotifyOnTargetUpdated=True, StringFormat={StaticResource StatisticNumberFormat}, SteppingDuration=00:00:02}" RenderTransformOrigin="0.5,0.5" Margin="15,15,0,0" Fill="GhostWhite"
                                      />
    </StackPanel>
</fenestra:View>
